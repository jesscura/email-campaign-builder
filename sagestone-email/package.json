{
  "name": "sagestone-email",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm --filter @sagestone/web start & pnpm --filter @sagestone/api start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "setup": "pnpm i && pnpm prisma:generate && pnpm db:migrate && pnpm db:seed"
  },
  "engines": {
    "node": ">=18 <23"
  },
  "devDependencies": {
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {}
}
