# ========================================
# SAGESTONE EMAIL vNEXT - Environment Configuration
# ========================================

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# For local development:
DATABASE_URL="postgresql://user:password@localhost:5432/sagestone_email_db?schema=public"

# For Vercel deployment with Vercel Postgres or Neon:
# Vercel/Neon automatically provides these variables when you add Postgres storage
# POSTGRES_URL="postgres://default:xxx@xxx-pooler.us-east-1.postgres.vercel-storage.com/verceldb"
# POSTGRES_PRISMA_URL="postgres://default:xxx@xxx-pooler.us-east-1.postgres.vercel-storage.com/verceldb?pgbouncer=true&connect_timeout=15"

# ----------------------------------------
# Redis Configuration (for BullMQ Workers)
# ----------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For Upstash Redis:
# UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=xxx

# ----------------------------------------
# NextAuth Configuration
# ----------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars-required

# ----------------------------------------
# Google OAuth
# ----------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------------------
# Billing Providers (Multi-provider support)
# ----------------------------------------
# Default billing driver: stripe, xendit, paypal, or paddle
BILLING_DRIVER=stripe

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_BUSINESS_PRICE_ID=price_your_business_price_id

# Xendit (Southeast Asia payments)
XENDIT_API_KEY=xnd_development_xxx
XENDIT_WEBHOOK_SECRET=xxx

# PayPal
PAYPAL_CLIENT_ID=xxx
PAYPAL_CLIENT_SECRET=xxx
PAYPAL_MODE=sandbox

# Paddle
PADDLE_API_KEY=xxx
PADDLE_WEBHOOK_SECRET=xxx
PADDLE_ENVIRONMENT=sandbox

# ----------------------------------------
# AI / OpenAI Configuration
# ----------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
# Alternative: Use local LLM
# LOCAL_LLM_URL=http://localhost:11434

# ----------------------------------------
# Email Providers (SendGrid primary, AWS SES fallback)
# ----------------------------------------
EMAIL_PROVIDER=sendgrid

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# AWS SES (fallback)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SMTP (alternative)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME="Sagestone Email"

# ----------------------------------------
# File Storage (Cloudflare R2 or AWS S3)
# ----------------------------------------
STORAGE_PROVIDER=r2

# Cloudflare R2
R2_ACCOUNT_ID=xxx
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET=sagestone-email-assets

# AWS S3 (alternative)
AWS_S3_BUCKET=sagestone-email-assets

# ----------------------------------------
# Integrations
# ----------------------------------------
# Zapier
ZAPIER_CLIENT_ID=xxx
ZAPIER_CLIENT_SECRET=xxx

# Shopify
SHOPIFY_API_KEY=xxx
SHOPIFY_API_SECRET=xxx

# HubSpot
HUBSPOT_API_KEY=xxx

# Salesforce
SALESFORCE_CLIENT_ID=xxx
SALESFORCE_CLIENT_SECRET=xxx

# Google Sheets
GOOGLE_SHEETS_CLIENT_ID=xxx
GOOGLE_SHEETS_CLIENT_SECRET=xxx

# Slack
SLACK_CLIENT_ID=xxx
SLACK_CLIENT_SECRET=xxx
SLACK_SIGNING_SECRET=xxx

# Zoho CRM
ZOHO_CLIENT_ID=xxx
ZOHO_CLIENT_SECRET=xxx
ZOHO_REDIRECT_URI=http://localhost:3000/api/zoho/callback
ZOHO_BASE_URL=https://accounts.zoho.com

# ----------------------------------------
# Security & Encryption
# ----------------------------------------
# Required: used to encrypt PII and tokens
ENCRYPTION_SECRET=change-this-32-char-min-string-required
# 2FA / TOTP secret encryption key
TOTP_ENCRYPTION_KEY=another-32-char-min-string-required

# ----------------------------------------
# Observability & Monitoring
# ----------------------------------------
# Sentry
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=your-org
SENTRY_PROJECT=sagestone-email

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=sagestone-email

# ----------------------------------------
# Application Configuration
# ----------------------------------------
NEXT_PUBLIC_APP_NAME="Sagestone Email"
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SUPPORT_EMAIL=support@sagestone.email
NODE_ENV=development

# API Server Configuration
API_PORT=4000
API_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:4000

# Workers Configuration
WORKERS_CONCURRENCY=5

